<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MVC Tech Blog</title>
    <link
      rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
  </head>

  <body>
    <div class="wrapper">
      <header>
        <h1 class="has-text-black px-3 py-3 has-text-weight-bold">Technically Blogger
        </h1>
        <nav class="navbar mt-2">
          {{#if loggedIn}}
            <a href="/" class="navbar-item is-hoverable pt-1">Home</a>
            <a
              href="/dashboard"
              class="navbar-item is-hoverable pt-1"
            >Dashboard</a>
            <a
              href="/dashboard/create/"
              class="navbar-item is-hoverable pt-1 mr-4"
            >Create a Post</a>
            <button id="logout" class="button is-danger">Logout</button>
          {{else}}
            <a href="/" class="navbar-item is-hoverable pt-1">Home</a>
            <a href="/login" class="button is-primary">login</a>
          {{/if}}
        </nav>
      </header>

      <main>
        {{{body}}}
      </main>

      <footer class="footer rows pb-2">
        <div class="row-is-full content has-text-centered">
          <p>
            <a href="/">Home</a>{{#if loggedIn}}
              |
              <a href="/dashboard/">Your Dashboard</a>
              |
              <a href="/dashboard/create/">New Post</a>
            {{else}}
              |
              <a href="/login/">Log-in</a>
            {{/if}}
          </p>
        </div>
        <div class="row-is-full content has-text-centered">
          <p>
            <strong>Technically Blogger</strong>
            by
            <a href="https://github.com/emilyepozzi">Emily Pozzi</a>
          </p>
        </div>
      </footer>
    </div>

    {{#if loggedIn}}
      <script src="/public/javascrypt/logout.js"></script>
    {{/if}}
  </body>

</html>